<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools">

    <!-- Root manifest attributes -->
    <application
        android:allowBackup="true"
        android:dataExtractionRules="@xml/data_extraction_rules"
        android:fullBackupContent="@xml/backup_rules"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/Theme.Resort"
        tools:targetApi="31">

        <!-- Main Activity (Launcher) -->
        <activity
            android:name=".MainActivity"
            android:exported="true">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />
                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>

        <!-- Registration Activity -->
        <activity
            android:name=".RegistrationActivity"
            android:exported="true" />

        <!-- Home Activity (Landing page after login) -->
        <activity
            android:name=".HomeActivity"
            android:exported="true" />

        <!-- Room Booking Activity -->
        <activity
            android:name=".RoomBookingActivity"
            android:exported="true" />

        <!-- Nearby Attractions Activity -->
        <activity
            android:name=".AttractionsActivity"
            android:exported="true" />

        <!-- Profile Activity (Accessible from Home Activity) -->
        <activity
            android:name=".Profile"
            android:exported="true" />

        <!-- Service Reservation Activity -->
        <activity
            android:name=".ServiceReservationActivity"
            android:exported="true" />

    </application>
</manifest>
