<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".RoomBookingActivity"
    android:background="@drawable/back">

    <TextView
        android:id="@+id/oceanViewDetailsTextView"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="12dp"
        android:text="Ocean View Suite"
        android:textColor="#000000"
        android:textSize="16sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        android:textStyle="bold" />

    <ImageView
        android:id="@+id/oceanViewImageView"
        android:layout_width="404dp"
        android:layout_height="179dp"
        android:layout_marginTop="8dp"
        android:contentDescription="Ocean View Room"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/oceanViewDetailsTextView" />

    <EditText
        android:id="@+id/oceanViewGuestNameInput"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="12dp"
        android:hint="Enter your name"
        android:inputType="textPersonName"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/oceanViewImageView" />

    <Button
        android:id="@+id/oceanViewBookButton"
        android:layout_width="369dp"
        android:layout_height="45dp"
        android:layout_marginTop="16dp"
        android:backgroundTint="@android:color/holo_orange_light"
        android:text="Book Now"
        android:textColorLink="@android:color/holo_orange_light"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/oceanViewGuestNameInput"
        android:textColor="@color/black"/>


    <TextView
        android:id="@+id/deluxeRoomDetailsTextView"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        android:text="Deluxe Room"
        android:textColor="#000000"
        android:textSize="16sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/oceanViewBookButton"
        android:textStyle="bold" />

    <ImageView
        android:id="@+id/deluxeRoomImageView"
        android:layout_width="411dp"
        android:layout_height="178dp"
        android:layout_marginTop="8dp"
        android:contentDescription="Deluxe Room"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/deluxeRoomDetailsTextView" />

    <EditText
        android:id="@+id/deluxeRoomGuestNameInput"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:hint="Enter your name"
        android:inputType="textPersonName"
        android:layout_marginTop="16dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/deluxeRoomImageView" />

    <Button
        android:id="@+id/deluxeRoomBookButton"
        android:layout_width="363dp"
        android:layout_height="46dp"
        android:layout_marginTop="16dp"
        android:backgroundTint="@android:color/holo_orange_light"
        android:text="Book Now"
        android:textColorLink="@android:color/holo_orange_light"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/deluxeRoomGuestNameInput"
        android:textColor="@color/black"/>

</androidx.constraintlayout.widget.ConstraintLayout>
